<%- include("partials/header.ejs") %>

<section class="container pt-5">
  
  <div class=" posts col-md-8 mt-5">
      <% if (locals.blogs) { %>
        <% for (let i = 0; i < blogs.length; i++) { %>
          <article class="blog-post bg-body-secondary">
            <h2 class="display-5 link-body-emphasis mb-1">
              <%= blogs[i]['title'] %>
            </h2>
            <p class="blog-post-meta"><%= blogs[i]['date'] %></p>
            <hr>
            <p>
              <%= blogs[i]['content'] %>
            </p>
            <form action="/edit" method="POST"></form>
              <button type="submit">Edit</button>
            </form>
          </article>
        <% } %>
      <% } %>
  </div>


</section>
<%- include("partials/footer.ejs") %>